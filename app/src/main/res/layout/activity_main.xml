<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icarasia.sample.main.MainActivity"
    android:id="@+id/rl_main_activity">

    <TextView
        android:id="@+id/tv_main_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>
    <TextView
        android:id="@+id/tv_main_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_toRightOf="@+id/tv_main_first_name"/>
    <TextView
        android:id="@+id/tv_main_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_below="@+id/tv_main_first_name"/>
    <Button
        android:id="@+id/btn_main_edit_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_main_mobile"
        android:layout_below="@+id/tv_main_first_name"
        android:text="Edit"/>
    <Button
        android:id="@+id/btn_main_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Type"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
